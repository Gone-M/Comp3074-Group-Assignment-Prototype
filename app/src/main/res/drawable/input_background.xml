<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Arka plan rengi -->
    <solid android:color="#FFFFFF" />

    <!-- Yuvarlatılmış köşeler -->
    <corners android:radius="12dp" />

    <!-- Kenarlık (stroke) -->
    <stroke
        android:width="2dp"
        android:color="#E29885" />

    <!-- Gölge efekti (opsiyonel, API 21+) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
